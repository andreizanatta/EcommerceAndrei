<script>
    function AdicionarProdutoCesta(nome, preco, imagem) {
        let cesta = new Array();

        /**
         * Verifica se a propriedade existe
         * Caso exista, converte de String para Object
         */
        if (localStorage.hasOwnProperty("cesta_produtos")) {
            cesta = JSON.parse(localStorage.getItem("cesta_produtos"));
        }

        /* Adiciona um novo valor no array criado */
        cesta.push({ nome: nome, preco: preco, imagem: imagem });

        /* Salva o item */
        localStorage.setItem("cesta_produtos", JSON.stringify(cesta));
    }
</script>
